<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        android:layout_margin="10sp"
        android:elevation="100sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage_sendRequest_makeNewConnection"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:layout_margin="10sp"
                    android:src="@drawable/kavya2"
                    app:civ_border_color="#DB633D"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:id="@+id/userName_sendRequest_makeNewConnection"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="profession"
                    android:textAlignment="textStart"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:id="@+id/profession_sendRequest_makeNewConnection"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="institution"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:id="@+id/institution_sendRequest_makeNewConnection"
                    android:textAlignment="textStart"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_weight="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="#00E676"
                    android:text="Connect"
                    android:layout_margin="5sp"
                    android:id="@+id/sendRequest_button_makeNewconnection"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:backgroundTint="#00E676" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>